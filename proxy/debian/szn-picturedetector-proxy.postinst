    #db_get szn-picturedetector-proxy/something
    #if [ "$RET" != "true" ]; then
    #    ...
    #fi
    ;;
abort-upgrade)
    # Nop
    ;;
abort-remove)
    # Nop
    ;;
abort-deconfigure)
    # Nop
    ;;
esac

